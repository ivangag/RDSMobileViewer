            android:exported="false" >
        </service>

        <activity
            android:name=".DetailsMainMenuActivity"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name=".DetailsMainMenuActivity"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name=".DownloadActivity"
            android:label="@string/title_activity_download" >
