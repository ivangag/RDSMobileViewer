<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.viewer.rds.actia.rdsmobileviewer.MainMenuActivity"
    android:weightSum="3"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragment_main_container"
            >

            <FrameLayout
                android:id="@+id/fragment_main"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                >
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragment_main_details_container"
            >
            <FrameLayout
                android:id="@+id/fragment_main_details"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                >
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:id="@+id/fragment_handling_download_container"
        >

        <FrameLayout
            style="@style/LayoutBackgroundTransparent"
            android:id="@+id/fragment_handling_download"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
    </LinearLayout>


